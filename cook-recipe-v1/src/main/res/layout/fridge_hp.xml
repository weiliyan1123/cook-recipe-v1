<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hplayout00"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fridge_HpBg"
    android:orientation="vertical"
    android:padding="@dimen/p05">

    <RelativeLayout
        android:id="@+id/hplayout02"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/cook_hp_btn"
            android:layout_width="@dimen/p180"
            android:layout_height="@dimen/p150"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/p05"
            android:layout_marginTop="@dimen/p10"
            app:srcCompat="@drawable/cook_hp_btn"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/list_hp_btn"
            android:layout_width="@dimen/p180"
            android:layout_height="@dimen/p150"
            android:layout_alignTop="@+id/cook_hp_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/p0"
            android:layout_marginEnd="@dimen/Margins"
            app:srcCompat="@drawable/list_hp_btn"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

</LinearLayout>